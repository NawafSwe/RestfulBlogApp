<%- include ('partials/header') %>
<div id ="main_container" class="ui main text container segment"> 
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form class= "ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
    
        <div class="field">
          <label>Title</label>  
          <input type="text " name="blog[title]" value="<%=blog.title%>">
        </div>

        <div class="field">
          <label>Image url</label>
           <input type="text " name="blog[image_url]" value="<%=blog.image_url%>">  
        </div>
        
        <div class="field">
          <label>Blog body </label>  
           <textarea name="blog[body]"><%=blog.body%></textarea>
        </div>

        <button class="ui inverted violet button">Submit!</button>

    </form>
</div>



<%- include ('partials/footer') %>